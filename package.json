{
        "name": "bloomer-mern",
        "version": "1.0.0",
        "description": "Bloomer - Video-First Shopping Experience (MERN Stack)",
        "main": "server/server.js",
        "scripts": {
                "start": "node server/server.js",
                "server": "nodemon server/server.js",
                "client": "npm start --prefix client",
                "dev": "concurrently \"npm run server\" \"npm run client\"",
                "build": "npm install --prefix client && npm run build --prefix client",
                "install-all": "npm install && npm install --prefix client"
        },
        "keywords": [
                "bloomer",
                "mern",
                "video-shopping",
                "e-commerce"
        ],
        "author": "Bloomer Team",
        "license": "ISC",
        "dependencies": {
                "@sendgrid/mail": "^8.1.6",
                "body-parser": "^1.20.2",
                "compression": "^1.7.4",
                "cors": "^2.8.5",
                "dotenv": "^16.3.1",
                "express": "^4.18.2",
                "firebase-admin": "^12.7.0",
                "helmet": "^7.0.0",
                "morgan": "^1.10.0",
                "nodemailer": "^7.0.9",
                "validator": "^13.11.0"
        },
        "devDependencies": {
                "concurrently": "^8.2.1",
                "nodemon": "^3.0.1"
        }
}
